<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssc.code.mapper.UserMapper">
	<resultMap id="UserMap" type="com.ssc.code.entity.User">
		<id column="id" property="id"/>
		<result column="unm" property="userName"/>
		<result column="pwd" property="passWord"/>
	</resultMap>

	<!-- 新增 -->
	<insert id="add" parameterType="com.ssc.code.entity.User">
		INSERT INTO user
			(id, unm, pwd)
		VALUE
			(#{id}, #{userName}, #{passWord})
	</insert>

	<!-- id查找 -->
	<select id="getById" parameterType="java.lang.String" resultMap="UserMap">
		SELECT * FROM user WHERE id=#{id}
	</select>

	<select id="selectUser" parameterType="com.ssc.code.entity.User" resultMap="UserMap">
		SELECT * FROM user WHERE unm=#{userName} AND pwd=#{passWord}
	</select>
</mapper>